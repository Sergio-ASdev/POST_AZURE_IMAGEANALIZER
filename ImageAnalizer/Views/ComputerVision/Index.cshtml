@{
}

<form method="post" class="text-center">
    <fieldset>
        <legend>Inserta el enlacce de la imagen a analizar</legend>
        <div>
            <label for="CompanyName"></label>
            <input type="text" name="urlImagen" style="width: 650px; text-align: center; padding: 4px; margin-bottom: 15px;" value="https://images-na.ssl-images-amazon.com/images/I/81Dl5GdAVkL.png" />
        </div>

        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
        </div>
    </fieldset>
</form>

@if (Model != null)
{
<div id="listaCanciones" class="text-center">
    <div class="padrecool">
        @foreach (var caption in Model.Description.Captions)
        {
            <h1 class="titulocool" style="text-transform: capitalize">@caption.Text</h1>
        }
    </div>

    @if (Model.Categories.Count != 0)
    {
        <h3>Categorias</h3>
        <ul class="list-group text-center">

            @foreach (var item in Model.Categories)
            {
                <li class="list-group-item">
                    <a>@item.Name</a>
                </li>
            }


        </ul>
    }

    <h3>Tags</h3>
    <ul class="list-group text-center">
        @foreach (var tag in Model.Tags)
        {
            <li class="list-group-item">
                <a>@tag.Name</a>
            </li>
        }
    </ul>

    <h3>Datos de la imagen</h3>

    <li class="list-group-item"><a>@Model.Color.IsBWImg</a></li>
    <h5>Color que predomina en la imagen</h5>
    <li class="list-group-item"><a>@Model.Color.AccentColor</a></li>
    <h5>Color que destaca en el fondo</h5>
    <li class="list-group-item"><a>@Model.Color.DominantColorBackground</a></li>
    <h5>Color mas cercano que destaca</h5>
    <li class="list-group-item"><a>@Model.Color.DominantColorForeground</a></li>
    <h5>Colores de la imagen</h5>
    @foreach (var tag in @Model.Color.DominantColors)
    {
        <li class="list-group-item"><a>@tag</a></li>
    }
    @*
        <h3>Tipo de imagen</h3>
        <li class="list-group-item"><a>@Model.ImageType.ClipArtType</a></li>
        <li class="list-group-item"><a>@Model.ImageType.LineDrawingType</a></li>
    *@
</div>
}